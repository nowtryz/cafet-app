{
    "extends": [
        "airbnb",
        "eslint:recommended"
    ],
    "plugins": [
        "compat",
        "react",
        "babel"
    ],
    "rules": {
        "semi": [2, "never"],
        "no-unexpected-multiline": 2,
        "indent": [2, 4],
        "quotes": [2, "single"],
        "compat/compat": 2,
        "react/jsx-one-expression-per-line": 0,
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "function-paren-newline": 0
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "settings": {
        "polyfills": ["fetch", "promises"],
        "import/resolver": {
            "babel-module": {}
        }
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
        "jsx": true
        }
    }
}