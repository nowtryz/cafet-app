{
    "extends": [
        "airbnb",
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "compat",
        "react"
    ],
    "rules": {
        "semi": [2, "never"],
        "no-unexpected-multiline": 2,
        "compat/compat": 2,
        "react/jsx-one-expression-per-line": 0,
        "function-paren-newline": 0,
        "indent": [2, 4]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "settings": {
        "polyfills": ["fetch"]
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
        "jsx": true
        }
    }
}